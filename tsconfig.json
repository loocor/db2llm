{
	"compilerOptions": {
		"target": "ES2022",
		"module": "ESNext",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"strict": true,
		"skipLibCheck": true,
		"outDir": "dist",
		"rootDir": "src",
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"lib": ["ES2022", "DOM"],
		"types": ["bun-types"]
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist"]
}
